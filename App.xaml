<Application x:Class="Mibar.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mibar="clr-namespace:Mibar"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ForeColor"
                             Color="White" />
            <SolidColorBrush x:Key="MaskColor"
                             Color="#0CFFFFFF" />
            <SolidColorBrush x:Key="FocusMaskColor"
                             Color="#19FFFFFF" />
            <SolidColorBrush x:Key="PopupWindowBackground"
                             Color="#0Cffffff" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
